@model List<Filme>
@{
    ViewData["Title"] = "Meu Diário de Filmes";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <h1 class="pro-title-page">Meu Diário</h1>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Cadastrar" class="btn btn-primary pro-btn">
            <i class="bi bi-plus-lg"></i> Adicionar Filme
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text" name="busca" class="form-control me-2" placeholder="Buscar por título no seu diário..." value="@ViewBag.Busca" />
            <button type="submit" class="btn btn-outline-light">Buscar</button>
        </form>
    </div>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var filme in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="movie-card">
                    <div class="movie-poster-wrapper">
                        @if (string.IsNullOrEmpty(filme.PosterUrl))
                        {
                            <div class="movie-poster-fallback">
                                <span>@filme.Titulo</span>
                            </div>
                        }
                        else
                        {
                            <img src="@filme.PosterUrl" alt="Pôster de @filme.Titulo" class="movie-poster-img" />
                        }

                        <div class="movie-rating-badge">
                            @filme.Nota <i class="bi bi-star-fill"></i>
                        </div>
                    </div>

                    <div class="movie-card-body">
                        <h5 class="movie-card-title">@filme.Titulo</h5>
                        <p class="movie-card-year">@filme.Ano</p>
                        <p class="movie-card-date">
                            Visto em: @filme.DataAssistido.ToShortDateString()
                        </p>

                        <div class="movie-card-actions">
                            <a asp-action="Editar" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-warning">Editar</a>
                            <a asp-action="Remover" asp-route-id="@filme.Id" class="btn btn-sm btn-outline-danger">Remover</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p class_="pro-subtitle">Seu diário está vazio.</p>
            <p>Clique em "Adicionar Filme" para começar a catalogar.</p>
        </div>
    }
</div>