@model Filme
@{
    ViewData["Title"] = "Remover Filme";
}

<h1>Confirmar Remoção</h1>
<hr />

<h3 class="text-danger">Tem certeza que deseja remover o filme abaixo?</h3>
<div>
    <h4>@Model.Titulo (@Model.Ano)</h4>
    <dl class="row">
        <dt class="col-sm-3">Assistido em</dt>
        <dd class="col-sm-9">@Model.DataAssistido.ToShortDateString()</dd>

        <dt class="col-sm-3">Nota</dt>
        <dd class="col-sm-9">@Model.Nota / 5</dd>
    </dl>

    <form asp-action="RemoverPost" method="post">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Remover" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-light">Cancelar</a>
    </form>
</div>