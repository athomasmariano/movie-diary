@model Filme
@{
    ViewData["Title"] = "Confirmar Remoção";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">

        <div class="form-container-pro">

            <div class="form-header-pro">
                <h2>@ViewData["Title"]</h2>
            </div>

            <div class="form-warning-pro">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <h3>Tem certeza que deseja remover este filme?</h3>
                <p>Esta ação é permanente e não pode ser desfeita.</p>
            </div>

            <h4 class="details-title">Você está prestes a remover:</h4>
            <div class="film-details-pro">
                @if (string.IsNullOrEmpty(Model.PosterUrl))
                {
                    <div class="film-details-fallback">
                        <i class="bi bi-film"></i>
                    </div>
                }
                else
                {
                    <img src="@Model.PosterUrl" alt="Pôster de @Model.Titulo" />
                }
                <div class="film-details-info">
                    <h4>@Model.Titulo (@Model.Ano)</h4>
                    <span>Visto em: @Model.DataAssistido.ToShortDateString()</span>
                    <span>Sua nota: @Model.Nota / 5</span>
                </div>
            </div>

            <hr class="form-divider">

            <form asp-action="RemoverPost" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group-buttons">
                    <a asp-action="Index" class="btn btn-outline-light pro-btn-outline">Cancelar</a>

                    <input type="submit" value="Sim, Remover" class="btn btn-danger pro-btn pro-btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>