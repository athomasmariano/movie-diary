<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Checkpoint</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark pro-navbar">

            <div class="container">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MovieLog</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link pro-nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link pro-nav-link" asp-area="" asp-controller="Filme" asp-action="Index">Meu Diário</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container main-content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="pro-footer">
        <div class="container">

            <div class="pro-footer-integrantes">
                <div>
                    <strong>Arthur Thomas Mariano de Souza</strong>
                    <span>RM: 561061</span>
                </div>
                <div>
                    <strong>Davi Cavalcanti Jorge</strong>
                    <span>RM: 559873</span>
                </div>
                <div>
                    <strong>Mateus da Silveira Lima</strong>
                    <span>RM: 559728</span>
                </div>
            </div>

            <div class="pro-footer-info">
                <span>&copy; 2025 - MovieLog</span>
                <span class="pro-footer-divider">|</span>
                <span>Checkpoint 2 ASP.NET Core MVC - FIAP</span>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>